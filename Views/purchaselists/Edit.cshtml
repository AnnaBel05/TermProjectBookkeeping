@model TermProjectBookkeeping.purchaselist

@{
    ViewBag.Title = "Редактирование";
}

<h2>Редактировать</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>список закупок</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.id)

        <div class="form-group">
            <div class="control-label col-md-2"> Одобрить </div>
            <div class="col-md-10">
                <div class="checkbox">
                    @Html.EditorFor(model => model.ifapproved)
                    @Html.ValidationMessageFor(model => model.ifapproved, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Вернуться к списку", "Index")
</div>
