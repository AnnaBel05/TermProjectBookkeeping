@model IEnumerable<TermProjectBookkeeping.scholarshipfund>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            <div> Дата формирования </div>
        </th>
        <th>
            <div> Сумма соц. стипендии </div>
        </th>
        <th>
            <div> Сумма стипендии на "хор" </div>
        </th>
        <th>
            <div> Сумма стипендии на "хор" и "отл" </div>
        </th>
        <th>
            <div> Сумма стипендии на "отл"  </div>
        </th>
        <th>
            <div> Базовая стипендия </div>
        </th>
        <th>
            <div> Общая сумма </div>
            
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.formationdate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.scholarshipsocial)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.scholarshipgreat)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.scholarshipgreatperfect)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.scholarshipperfect)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.basescholarship)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.totalsum)
        </td>
        <td>
            @if (User.Identity.IsAuthenticated)
            {
                @Html.ActionLink("Редактировать", "Edit", new { id = item.id }) <p style="display:inline"> | </p>
                @Html.ActionLink("Детали", "Details", new { id = item.id }) <p style="display:inline"> | </p>
                @Html.ActionLink("Удалить", "Delete", new { id = item.id })
            }
        </td>
    </tr>
}
</table>
