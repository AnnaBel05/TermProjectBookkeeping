@model IEnumerable<TermProjectBookkeeping.studentscholarship>

@{
    ViewBag.Title = "Стипендия студентов";
}

<h2>Распределение стипендии</h2>

<p>
    @Html.ActionLink("Внести информацию о стипендиях", "Create")
</p>
<table class="table">
    <tr>
        <th>
            <div> Студент </div>
        </th>
        <th>
            <div> Тип оценок </div>
        </th>
        <th>
            <div> Социальная стипендия </div>
        </th>
        <th>
            <div> Материальная помощь </div>
        </th>
        <th>
            <div> Стипендия, всего </div>
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.student)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.grades)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ifsocial)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ifsocialhelp)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.scholarshiptype)
            </td>
            <td>
                @if (User.Identity.IsAuthenticated)
                {
                    @Html.ActionLink("Редактировать", "Edit", new { id = item.id }) <p style="display:inline"> | </p>
                    @Html.ActionLink("Детали", "Details", new { id = item.id }) <p style="display:inline"> | </p>
                    @Html.ActionLink("Удалить", "Delete", new { id = item.id })
                }
            </td>
        </tr>
    }

</table>

@if (User.Identity.IsAuthenticated)
{
    if (User.IsInRole("Главный бухгалтер"))
    {
        <p>
            <button>@Html.ActionLink("Назначить стипендии", "AssignScholarship", "studentscholarships")</button>
        </p>
    }
}

@if (User.Identity.IsAuthenticated)
{
        <p>
            <button>@Html.ActionLink("Просмотреть стипендиальный фонд", "Index", "scholarshipfunds")</button>
        </p>
}
